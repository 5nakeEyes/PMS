<Window x:Class="PMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PMS.ViewModels"
        Title="Task Manager" Height="500" Width="800">

    <Window.DataContext>
        <vm:TaskViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <!-- 3 wiersze: Dodaj | nagłówki | lista -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 1) Przycisk Dodaj -->
        <Button Content="Dodaj"
            Command="{Binding ShowAddDialogCommand}"
            Grid.Row="0"
            HorizontalAlignment="Left"
            Width="100"
            Margin="0,0,0,5"/>

        <!-- 2) Nagłówki kolumn -->
        <Grid Grid.Row="1" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <!-- Tytuł -->
                <ColumnDefinition Width=".5*"/>
                <!-- Termin -->
                <ColumnDefinition Width=".5*"/>
                <!-- Status -->
                <ColumnDefinition Width=".5*"/>
                <!-- Priorytet -->
                <ColumnDefinition Width=".5*"/>
                <!-- Akcje -->
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
             Text="Tytuł"
             FontWeight="Bold"
             Margin="10,0,10,0"/>

            <TextBlock Grid.Column="1"
             Text="Termin"
             HorizontalAlignment="Center"
             FontWeight="Bold"
             Margin="0,0,10,0"/>

            <TextBlock Grid.Column="2"
             Text="Status"
             HorizontalAlignment="Center"
             FontWeight="Bold"
             Margin="0,0,10,0"/>

            <TextBlock Grid.Column="3"
             Text="Priorytet"
             HorizontalAlignment="Center"
             FontWeight="Bold"
             Margin="0,0,10,0"/>

            <TextBlock Grid.Column="4"
             Text="Akcje"
             HorizontalAlignment="Center"
             FontWeight="Bold"
             Margin="0,0,10,0"/>
        </Grid>

        <!-- 3) Lista zadań -->
        <ScrollViewer Grid.Row="2"
                  VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Tasks}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="5"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="0,0,0,5"
                    Padding="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width=".5*"/>
                                    <ColumnDefinition Width=".5*"/>
                                    <ColumnDefinition Width=".5*"/>
                                    <ColumnDefinition Width=".5*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Tytuł -->
                                <TextBlock Grid.Column="0"
                           Text="{Binding Title}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                                <!-- Termin jako Label -->
                                <TextBlock Grid.Column="1"
                           Text="{Binding DueDate, StringFormat=d}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                                <!-- Status jako ComboBox -->
                                <ComboBox Grid.Column="2"
                          ItemsSource="{Binding DataContext.AllStates, RelativeSource={RelativeSource AncestorType=Window}}"
                          SelectedItem="{Binding State, Mode=TwoWay}"
                          HorizontalContentAlignment="Center"
                          HorizontalAlignment="Stretch"/>

                                <!-- Priorytet jako Label -->
                                <TextBlock Grid.Column="3"
                           Text="{Binding Priority}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                                <StackPanel Grid.Column="4" Orientation="Vertical" HorizontalAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.5*"/>
                                            <ColumnDefinition Width="0.5*"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Przycisk Edytuj -->
                                        <Button Content="Edytuj" 
                                        Grid.Column="0"
                                        Command="{Binding EditCommand}"
                                        ToolTip="Edytuj zadanie"
                                        Margin="0,0,1,0"
                                        HorizontalAlignment="Stretch"/>
                                        <!-- Przycisk Usuń -->
                                        <Button Content="Usuń" 
                                        Grid.Column="1"
                                        Command="{Binding RemoveCommand}"
                                        ToolTip="Usuń zadanie"
                                        HorizontalAlignment="Stretch"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>