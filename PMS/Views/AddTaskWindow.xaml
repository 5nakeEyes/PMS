<Window x:Class="PMS.Views.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Zadanie"
        Height="360" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Tytuł:"/>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Opis:" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True" Height="60"/>

            <TextBlock Text="Termin:" Margin="0,10,0,0"/>
            <DatePicker SelectedDate="{Binding DueDate, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Status:" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding AllStates}"
                      SelectedItem="{Binding State}"/>

            <TextBlock Text="Priorytet:" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding AllPriorities}"
                      SelectedItem="{Binding Priority}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">

            <Button Content="Zatwierdź"
              Width="80"
              Margin="0,0,10,0"
              Command="{Binding ConfirmCommand}"
              IsDefault="True" />

        </StackPanel>
    </Grid>
</Window>
