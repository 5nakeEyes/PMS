<UserControl
    x:Class="PMS.UI.Views.TaskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d">

    <Border BorderThickness="1"
          CornerRadius="4"
          Padding="8"
          Margin="4"
          Style="{StaticResource FirstRoundedBorderStyle}">
        <Border.InputBindings>
            <MouseBinding Gesture="LeftClick"
                Command="{Binding ShowPreviewCommand}" />
        </Border.InputBindings>
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Tytuł -->
                <ColumnDefinition Width="1*"/>
                <!-- Deadline -->
                <ColumnDefinition Width=".5*"/>
                <!-- Status -->
                <ColumnDefinition Width=".5*"/>
                <!-- Priorytet -->
                <ColumnDefinition Width=".5*"/>
                <!-- Akcje -->
                <ColumnDefinition Width=".6*"/>
            </Grid.ColumnDefinitions>

            <!-- Tytuł zadania -->
            <TextBlock Grid.Column="0"
                 Text="{Binding Title}"
                 HorizontalAlignment="Left"
                 MinWidth="100"
                 FontWeight="SemiBold"
                 ToolTip="{Binding Title}"/>

            <!-- Termin zakończenia -->
            <TextBlock Grid.Column="1"
                 Text="{Binding Deadline, StringFormat={}{0:dd/MM/yyyy}}"
                 Margin="5,0"
                 MinWidth="60"
                 HorizontalAlignment="Center"/>

            <!-- Status -->
            <ComboBox Grid.Column="2"
                ItemsSource="{Binding AllStates}"
                SelectedItem="{Binding State}"
                MinWidth="80"
                HorizontalAlignment="Center"
                Margin="5,0"/>

            <!-- Priorytet -->
            <ComboBox Grid.Column="3"
                ItemsSource="{Binding AllPriorities}"
                SelectedItem="{Binding Priority}"
                MinWidth="80"
                HorizontalAlignment="Center"
                Margin="5,0"/>

            <!-- Przycisk Edytuj / Usuń -->
            <StackPanel Grid.Column="4"
                  Orientation="Horizontal"
                  HorizontalAlignment="Center"
                  Margin="5,0,0,0">
                <Button Content="Edit"
                Command="{Binding EditCommand}"
                HorizontalAlignment="Center"
                MinWidth="50"
                Margin="0,0,4,0"
                Style="{StaticResource IconButtonStyle}"/>
                <Button Content="Delete"
                HorizontalAlignment="Center"
                MinWidth="50"
                Command="{Binding DeleteCommand}"
                Style="{StaticResource IconButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>