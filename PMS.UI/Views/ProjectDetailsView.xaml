<UserControl x:Class="PMS.UI.Views.ProjectDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMS.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderThickness="1" CornerRadius="4">
        <StackPanel>
            <!-- Nagłówek projektu -->
            <Grid Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding ProjectList.SelectedProject.Name}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           FontWeight="Bold"
                           FontSize="26" Margin="5,2,15,2"/>

                <Button Grid.Column="1"
                        Content="Edit"
                        Width="auto"
                        Command="{Binding ProjectList.EditProjectCommand}"
                        Margin="5,5,0,5" 
                        Style="{StaticResource IconButtonStyle}"/>

                <Button Grid.Column="2"
                        Content="Delete"
                        Width="auto"
                        Command="{Binding ProjectList.RemoveProjectCommand}"
                        Margin="5,5,0,5" 
                        Style="{StaticResource IconButtonStyle}"/>
            </Grid>

            <!-- Szczegóły projektu -->
            <Border BorderThickness="1" Style="{StaticResource SecondRoundedBorderStyle}">
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Stan:"
                           FontWeight="SemiBold"
                           Margin="5,0,5,0"
                           Style="{StaticResource LightTextBlockStyle}"/>

                <TextBlock Grid.Column="1" Text="{Binding ProjectList.SelectedProject.OverallState}"
                           Margin="0,0,0,0"
                           Style="{StaticResource LightTextBlockStyle}"/>

                <TextBlock Grid.Column="2" Text="Deadline:"
                           FontWeight="SemiBold" Margin="0,0,5,0"
                           Style="{StaticResource LightTextBlockStyle}"/>

                <TextBlock Grid.Column="3" Text="{Binding ProjectList.SelectedProject.Deadline, StringFormat={}{0:dd/MM/yyyy}}"
                           Margin="0,0,15,0"
                           Style="{StaticResource LightTextBlockStyle}"/>

                <TextBlock Grid.Column="4" Text="Wykonano:"
                           FontWeight="SemiBold" Margin="0,0,5,0"
                           Style="{StaticResource LightTextBlockStyle}"/>

                <TextBlock Grid.Column="5" Text="{Binding ProjectList.SelectedProject.ProgressText}"
                           Margin="0,0,5,0"
                           Style="{StaticResource LightTextBlockStyle}"/>
            </Grid>
                </Border>
        </StackPanel>
    </Border>
</UserControl>
