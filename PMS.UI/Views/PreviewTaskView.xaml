<UserControl x:Class="PMS.UI.Views.PreviewTaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Padding="16"
             Background="#F5F5F5">

    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2,8,2"/>
        </Style>

        <Style x:Key="PriorityBadge" TargetType="Border">
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#43A047"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Priority}" Value="High">
                    <Setter Property="Background" Value="#E53935"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Priority}" Value="Medium">
                    <Setter Property="Background" Value="{StaticResource SecondBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="White"
          CornerRadius="8"
          Padding="20">
        <StackPanel Orientation="Vertical">

            <!-- Nagłówek: tytuł + ikona stanu -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="1"
                   Text="{Binding Title}"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#222"/>
            </Grid>

            <!-- Opis -->
            <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                <Run Text="Description:" 
                    FontWeight="SemiBold"
                    Foreground="#333"/>
                <LineBreak/>
                <Run Text="{Binding Description, Mode=OneWay}"
                    Foreground="#555"/>
            </TextBlock>

            <!-- Deadline i State w dwóch kolumnach -->
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Deadline -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource LabelStyle}" Text="Deadline:"/>
                    <TextBlock Text="{Binding Deadline, StringFormat={}{0:dd/MM/yyyy}}"
                     Foreground="#555"
                     VerticalAlignment="Center"/>
                </StackPanel>

                <!-- State -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource LabelStyle}" Text="State:"/>
                    <TextBlock Text="{Binding State}"
                     Foreground="#555"
                     VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Priorytet jako badge -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,4,0,0">
                <TextBlock Style="{StaticResource LabelStyle}" Text="Priority:"/>
                <Border Style="{StaticResource PriorityBadge}">
                    <TextBlock Text="{Binding Priority}"
                     Foreground="White"
                     FontWeight="Bold"/>
                </Border>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>