<UserControl x:Class="PMS.UI.Views.TaskPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:PMS.UI.Views">
    <Border BorderThickness="1"
            CornerRadius="4"
            Margin="0,5,0,0"
            Style="{StaticResource FirstRoundedBorderStyle}">
        <StackPanel>
            <views:TaskControlsView/>
            <views:TaskListHeaderView/>
            <views:TaskListView/>
        </StackPanel>
    </Border>
</UserControl>