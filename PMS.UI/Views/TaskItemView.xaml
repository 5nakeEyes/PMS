<UserControl
    x:Class="PMS.UI.Views.TaskItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:PMS.Presentation.ViewModels;assembly=PMS.Presentation">

    <Border BorderBrush="LightGray"
          BorderThickness="1"
          CornerRadius="4"
          Padding="8"
          Margin="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Tytuł -->
                <ColumnDefinition Width="Auto"/>
                <!-- StartDate -->
                <ColumnDefinition Width="Auto"/>
                <!-- Deadline -->
                <ColumnDefinition Width="Auto"/>
                <!-- Status -->
                <ColumnDefinition Width="Auto"/>
                <!-- Priorytet -->
                <ColumnDefinition Width="Auto"/>
                <!-- Akcje -->
            </Grid.ColumnDefinitions>

            <!-- Tytuł zadania -->
            <TextBlock Grid.Column="0"
                 Text="{Binding Title}"
                 VerticalAlignment="Center"
                 FontWeight="SemiBold"/>

            <!-- Data rozpoczęcia -->
            <TextBlock Grid.Column="1"
                 Text="{Binding StartDate, StringFormat=d}"
                 VerticalAlignment="Center"
                 Margin="8,0"
                 ToolTip="Data rozpoczęcia"/>

            <!-- Termin zakończenia -->
            <TextBlock Grid.Column="2"
                 Text="{Binding Deadline, StringFormat=d}"
                 VerticalAlignment="Center"
                 Margin="8,0"
                 ToolTip="Termin zakończenia"/>

            <!-- Status -->
            <ComboBox Grid.Column="3"
                ItemsSource="{Binding AllStates}"
                SelectedItem="{Binding State}"
                Width="100"
                Margin="8,0"/>

            <!-- Priorytet -->
            <ComboBox Grid.Column="4"
                ItemsSource="{Binding AllPriorities}"
                SelectedItem="{Binding Priority}"
                Width="100"
                Margin="8,0"/>

            <!-- Przycisk Edytuj / Usuń -->
            <StackPanel Grid.Column="5"
                  Orientation="Horizontal"
                  HorizontalAlignment="Right"
                  Margin="8,0,0,0">
                <Button Content="Edit"
                Command="{Binding EditCommand}"
                Margin="0,0,4,0"/>
                <Button Content="Delete"
                Command="{Binding DeleteCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>